[gpg]
	format = ssh
[commit]
	gpgsign = true
[user]
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIN1kjySs8SndASeQdQlGLrhqb6XzPOBwi88tIaU58EOP
	email = barlevalon@users.noreply.github.com
  name = Alon Hearter
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = master
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[core]
  pager = delta
  editor = nvim
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[log]
	date = local
[url "git@github.com:"]
	insteadOf = https://github.com/
