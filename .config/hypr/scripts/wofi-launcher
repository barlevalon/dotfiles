#!/bin/bash

# Check if our specific wofi instance is running (look for the actual wofi process with --show)
if pgrep -f "^wofi --show drun" > /dev/null; then
    # Our app launcher wofi is running, kill it (toggle off)
    pkill -x wofi
    exit 0
fi

# Kill any other wofi instance that might be running
pkill -x wofi 2>/dev/null

# Launch wofi with any arguments passed to this script, including colors file
wofi --color "$HOME/.config/wofi/colors" "$@"