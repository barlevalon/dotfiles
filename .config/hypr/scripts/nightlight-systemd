#!/bin/bash
# Debug wrapper for nightlight systemd service

# Log environment
echo "Running nightlight update at $(date)" >> /tmp/nightlight-debug.log
echo "WAYLAND_DISPLAY=$WAYLAND_DISPLAY" >> /tmp/nightlight-debug.log
echo "DISPLAY=$DISPLAY" >> /tmp/nightlight-debug.log
echo "PATH=$PATH" >> /tmp/nightlight-debug.log

# Run the actual command and capture output
/home/alon/.config/hypr/scripts/nightlight update >> /tmp/nightlight-debug.log 2>&1
EXIT_CODE=$?

echo "Exit code: $EXIT_CODE" >> /tmp/nightlight-debug.log
echo "---" >> /tmp/nightlight-debug.log

exit $EXIT_CODE