configuration {
    modi: "drun,run,window";
    font: "MesloLGM Nerd Font Mono 14";
    show-icons: false;
    icon-theme: "Papirus";
    display-drun: "";
    display-run: "";
    display-window: "";
    drun-display-format: "{name}";
    window-format: "{w} {t}";
    
    /* Modern behavior */
    click-to-exit: true;
    hide-scrollbar: true;
}

@theme "theme"