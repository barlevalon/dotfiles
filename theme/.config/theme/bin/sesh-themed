#!/bin/bash
# Wrapper for sesh that uses the current theme's FZF colors

# Get FZF_DEFAULT_OPTS from tmux global environment
if [[ -n "${TMUX:-}" ]]; then
  FZF_OPTS=$(tmux show-environment -g FZF_DEFAULT_OPTS 2>/dev/null | cut -d= -f2-)
  if [[ -n "$FZF_OPTS" ]]; then
    export FZF_DEFAULT_OPTS="$FZF_OPTS"
  fi
fi

# Run sesh with the themed FZF
sesh connect "$(
  sesh list | fzf-tmux -p 80%,70% \
    --no-sort --ansi --border-label ' sesh ' --prompt '⚡  ' \
    --header '  ^a all ^t tmux ^g configs ^x zoxide ^f find ^d tmux kill' \
    --bind 'tab:down,btab:up' \
    --bind 'ctrl-a:change-prompt(⚡)+reload(sesh list)' \
    --bind 'ctrl-t:change-prompt(🪟)+reload(sesh list -t)' \
    --bind 'ctrl-g:change-prompt(⚙️  )+reload(sesh list -c)' \
    --bind 'ctrl-x:change-prompt(📁)+reload(sesh list -z)' \
    --bind 'ctrl-f:change-prompt(🔎)+reload(fd -H -d 2 -t d -E .Trash . ~)' \
    --bind 'ctrl-d:execute(tmux kill-session -t {})+change-prompt(⚡  )+reload(sesh list)' \
    --preview-window 'right:65%' \
    --preview 'sesh preview {}'
)"