#!/bin/bash

# Read colors from wofi colors file
colors_file="$HOME/.config/wofi/colors"
if [[ ! -f "$colors_file" ]]; then
    echo "Error: Colors file not found at $colors_file"
    exit 1
fi

# Read colors into array
mapfile -t colors < "$colors_file"

# Generate rofi theme
cat > "$HOME/.config/rofi/theme.rasi" << EOF
* {
    /* Theme colors */
    bg0:     ${colors[0]};
    bg1:     ${colors[1]};
    bg2:     ${colors[2]};
    bg3:     ${colors[3]};
    fg0:     ${colors[4]};
    fg1:     ${colors[5]};
    fg2:     ${colors[6]};
    red:     ${colors[8]};
    orange:  ${colors[9]};
    yellow:  ${colors[10]};
    green:   ${colors[11]};
    cyan:    ${colors[12]};
    blue:    ${colors[13]};
    purple:  ${colors[14]};
    blue2:   ${colors[15]};
    
    background-color: @bg0;
    text-color: @fg1;
    
    selected-normal-background: @bg2;
    selected-normal-foreground: @blue;
    
    alternate-normal-background: @bg0;
    alternate-normal-foreground: @fg1;
    
    active-background: @bg1;
    active-foreground: @blue;
    
    urgent-background: @bg1;
    urgent-foreground: @red;
}

window {
    background-color: @bg0;
    border: 2px;
    border-color: @fg1;
    border-radius: 8px;
    padding: 20px;
    width: 600px;
}

mainbox {
    background-color: transparent;
    children: [inputbar, listview];
    spacing: 20px;
}

inputbar {
    background-color: @bg1;
    border-radius: 8px;
    padding: 10px 15px;
    children: [prompt, entry];
    spacing: 10px;
}

prompt {
    background-color: transparent;
    text-color: @blue;
}

entry {
    background-color: transparent;
    text-color: @fg1;
    placeholder: "Search...";
    placeholder-color: @bg3;
}

listview {
    background-color: transparent;
    columns: 1;
    lines: 15;
    spacing: 5px;
    fixed-height: true;
    scrollbar: true;
}

element {
    background-color: transparent;
    padding: 10px 15px;
    border-radius: 8px;
    cursor: pointer;
    orientation: horizontal;
    spacing: 10px;
}

element normal.normal {
    background-color: @bg0;
    text-color: @fg1;
}

element selected.normal {
    background-color: @bg2;
    text-color: @blue;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    vertical-align: 0.5;
    horizontal-align: 0.0;
}

element-icon {
    background-color: transparent;
    size: 24px;
    cursor: inherit;
}
EOF