#!/usr/bin/env bash

# Power menu using wofi
OPTIONS="󰌾 Lock\n󰶐 Display Off\n󰍃 Logout\n󰜉 Restart\n󰐥 Power Off"

# Get the selected option
SELECTED=$(echo -e "$OPTIONS" | ~/.config/hypr/scripts/wofi-launcher --dmenu --prompt "Power Menu" --width 400 --lines 6 --cache-file /dev/null --style ~/.config/hypr/scripts/power-menu-style.css)

case $SELECTED in
    "󰌾 Lock")
        hyprlock
        ;;
    "󰶐 Display Off")
        hyprctl dispatch dpms off
        ;;
    "󰍃 Logout")
        hyprctl dispatch exit
        ;;
    "󰜉 Restart")
        systemctl reboot
        ;;
    "󰐥 Power Off")
        systemctl poweroff
        ;;
esac