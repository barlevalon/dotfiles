#!/usr/bin/env bash

# Power menu using wofi without custom CSS
OPTIONS="󰌾  Lock\n󰶐  Display Off\n󰍃  Logout\n󰜉  Restart\n󰐥  Power Off"

# Get the selected option
SELECTED=$(echo -e "$OPTIONS" | wofi --dmenu --prompt "Power Menu" --color "$HOME/.config/wofi/colors")

case $SELECTED in
    "󰌾  Lock")
        hyprlock
        ;;
    "󰶐  Display Off")
        hyprctl dispatch dpms off
        ;;
    "󰍃  Logout")
        uwsm stop
        ;;
    "󰜉  Restart")
        systemctl reboot
        ;;
    "󰐥  Power Off")
        systemctl poweroff
        ;;
esac